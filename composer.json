{
    "require": {
        "jaxon-php/jaxon-core": "^5.5",
        "phpmailer/phpmailer": "^7.0",
        "twig/twig": "^3.23",
        "wikimedia/composer-merge-plugin": "^2.1",
        "doctrine/orm": "^3.6",
        "doctrine/dbal": "^4.4",
        "doctrine/migrations": "^3.9",
        "symfony/cache": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "squizlabs/php_codesniffer": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Lotgd\\": "src/Lotgd/",
            "Lotgd\\Installer\\": "install/lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lotgd\\Tests\\": "tests/",
            "Lotgd\\Tests\\Stubs\\": "tests/Stubs/"
        }
    },
    "scripts": {
        "static": "phpstan analyse --configuration phpstan.neon",
        "test": "phpunit --configuration phpunit.xml",
        "lint": "phpcs .",
        "lint:fix": "phpcbf ."
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "config/composer.local.json"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true
        },
        "platform": {
            "php": "8.3.0"
        },
        "sort-packages": true
    }
}
