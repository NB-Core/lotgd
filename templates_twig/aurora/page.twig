<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ meta_description }}">
    <title>{{ title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ template_path }}/assets/style.css"/>
    <link rel="stylesheet" href="/templates/common/colors.css"/>
    <link rel="stylesheet" href="/templates/common/sidebar.css"/>
    {{ headscript|raw }}{{ script|raw }}
</head>
<body class="main-body">
{% set right_sidebar %}
    {{ verticalad|raw }}
    {{ bodyad|raw }}
    {{ stats|raw }}<br/>
    {{ paypal|raw }}
{% endset %}
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-3 col-sm-2 motd">
            {{ motd|raw }}
        </div>
        <div class="col-sm-8 hidden-xs header-picture">&nbsp;</div>
        <div class="col-xs-8 col-sm-2">
            {{ mail|raw }}
            {{ petition|raw }}
            {{ petitiondisplay|raw }}
        </div>
    </div>
    <div class="row d-sm-none mobile-toggles">
        <nav class="navbar navbar-dark bg-dark">
            <div class="container-fluid justify-content-end">
                <button class="navbar-toggler me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#leftSidebar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#rightSidebar">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </div>
    <div class="row">
        <nav class="col-sm-2 d-none d-sm-block sidebar-content">
            {{ navad|raw }}
            {{ nav|raw }}
        </nav>
        <main class="col-12 col-sm-8 main-content">
            {{ content|raw }}
        </main>
        <aside class="col-sm-2 d-none d-sm-block sidebar-content">
            {{ right_sidebar|raw }}
        </aside>
    </div>
    <div class="bootstrap-footer row">
        <div class="col-xs-12">
            {{ copyright|raw }}<br />
            {{ source|raw }}<br />{{ version }}<br />({{ pagegen|raw }})
        </div>
    </div>
</div>
<div class="offcanvas offcanvas-start" tabindex="-1" id="leftSidebar">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Menu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        {{ navad|raw }}
        {{ nav|raw }}
    </div>
</div>

<div class="offcanvas offcanvas-end" tabindex="-1" id="rightSidebar">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Info</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        {{ right_sidebar|raw }}
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
